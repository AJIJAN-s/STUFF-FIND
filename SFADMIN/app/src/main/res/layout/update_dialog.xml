<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Barang"
        android:inputType="textCapWords"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/editTextSuBName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Harga Barang"
        android:inputType="number"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/editTextSuBName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Status Barang"
        android:inputType="textCapCharacters"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/editTextSuBName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Lokasi Barang"
        android:inputType="textCapSentences"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateStuff"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_touch2"
            android:textColor="#ffffff"
            android:text="Update"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/buttonDeleteStuff"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_touch2"
            android:textColor="#ffffff"
            android:text="Delete"
            android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>
